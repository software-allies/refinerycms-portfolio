<div class='container'>
	<%- if items.present? && @gallery.nil? -%>

		<div class='row'>
			<div class="span3">
				<div>
					<%= image_tag "logo.png" %>
				</div>
				<div class="description-padding">
					<%= raw Refinery::Portfolio.description %>
				</div>
			</div>
		  <div class="span9">
			  <div class='slideshow box_skitter box_skitter_large' id='gallery_images'>
			    <ul>
			      <%= render items %>
			    </ul>
			  </div>
		  </div>
		</div>

	<% elsif @gallery.present? %>

		<div class='slideshow box_skitter box_skitter_large' id='gallery_images'>
			  <ul>
			    <%= render items %>
			  </ul>
		</div>

	<% else %>	

	  	<h1>Please, add some galleries and some images to the top level.</h1>

	<%- end -%>
</div>