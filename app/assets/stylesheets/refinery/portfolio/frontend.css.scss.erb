<% max_image_width, max_image_height = ::Refinery::Portfolio.cover_image_thumb_size.split("x").map(&:to_i) %>
 
.no-list {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

#galleries {
  
  .gallery {
    border: 1px solid #474747;
    display: inline-block;
    margin: 10px 10px;
    width: <%= max_image_width %>px;
    background-color: #dedede;

    a {
      color: #000;
      text-decoration: none;
    }

    .image, .details {
      padding: 0;
      margin: 0;
    }

    .image {
      text-align: center;
      width: 100%;
    }

    .details {

      h2, p {
        padding: 1px 5px;
      }

      h2 {
        font-size: 100%;
        font-weight: bold;
      }
    }

    img {
    }
  }

}

.description-padding{
  padding-top: 130px;
}

.static-size-image{
  height: 150px;
  width: 150px;
}

.paddingleft{
  padding-bottom: 20px;
}

.aligncenter{
  text-align: center;
}

.modal-header h3{
  color: #000;
}

.modal-body {
  color: #000;
}

.dblock{
  display: block
}

.left{
  float: left
}

.right{
  float: right
}
.small-padding{
  padding-bottom: 20px;
}
.ctext{
  text-align: center;
}
.logo{
  width: 270px
}
.ohidden{
  overflow: hidden; 
}
.img-responsive-height{
  display: block;
  width: auto;
  max-height: 90%
}
.modal { 
    position: fixed; 
}
.modal-body { 
    height: 60%; 
}

.yellow_btn{
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    background-color: #FAC800;
    background-image: linear-gradient(to bottom, #FAC800, #ebbd04);
    background-repeat: repeat-x;
    border-color: #CCCCCC #CCCCCC #B3B3B3;
    border-image: none;
    border-radius: 4px;
    border-style: solid;
    border-width: 1px;
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
    color: #6b6147;
    cursor: pointer;
    display: inline-block;
    font-size: 14px;
    line-height: 20px;
    margin-bottom: 0;
    padding: 4px 12px;
    text-align: center;
    font-weight: bold;
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
    vertical-align: middle;
}

.yellow_btn:hover{
  background-color: #ebbd04;
  background-image: linear-gradient(to bottom, #ebbd04, #ebbd04);
}

.yellow_btn:disabled{
  color: #909090;
  background-image: linear-gradient(to bottom, #F0F0F0, #D2D2D2);
}