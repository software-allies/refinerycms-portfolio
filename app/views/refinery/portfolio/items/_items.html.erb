
<div class='container'>
	<%- if items.present? && @gallery.nil? -%>

		<div class='row'>
			<div class="span3">
				<div>
					<%= image_tag "logo.png" %>
				</div>
				<div class="description-padding">
					<%= raw Refinery::Portfolio.description %>
				</div>
			</div>
		  <div class="span9">
			  <div class='slideshow box_skitter box_skitter_large' id='gallery_images'>
			    <ul>
			      <%= render items %>
			    </ul>
			  </div>
		  </div>
		</div>

	<% elsif @gallery.present? %>
		<% total_items = 1 %>
	 	<% items.each do |item| %>
	 		<%= "<div class='row paddingleft'>".html_safe if total_items == 1 %>
	 		<%= render 'refinery/portfolio/items/galleryitem', :item =>item %>
	 		<%= "</div>".html_safe if total_items == 6 %>
	 		<% total_items = 0 if total_items ==  6 %>
	 		<% total_items += 1 %>
	 	<% end %>
	 	<%= "</div>".html_safe if total_items > 1 %>
	<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h3 id="myModalLabel">Modal header</h3>
		</div>
		<div class="modal-body">
		<p>One fine body…</p>
		</div>
		<div class="modal-footer">
		<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		<button class="btn btn-primary">Save changes</button>
		</div>
	</div>
	<% else %>	

	  	<h1>Please, add some galleries and some images to the top level.</h1>

	<%- end -%>
</div>